{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    // "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  },
  "include": [
    "config/**/*",
    "db/**/*",
    "middlewares/**/*",
    "models/**/*",
    "routes/**/*",
    "services/**/*",
    "types/**/*",
    "server.ts",
    "app.ts",
    "cutsom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}